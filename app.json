{
  "name": "Refinery CSA App",
  "description": "A CMS template for CSAs to communicate w/ thier members.",
  "success_url": "/admin/users/register",
  "addons": ["heroku-postgresql:hobby-dev", "newrelic:wayne", "raygun:intro"],
  "env": {
    "RACK_ENV": "production",
    "RAILS_ENV": "production",
    "DRAGONFLY_SECRET": { "generator": "secret" },
    "SECRET_KEY_BASE": { "generator": "secret" }
  },
  "scripts": {
    "postdeploy": "pg_restore --verbose --clean --no-acl --no-owner -d$DATABASE_URL db/seed_db.dump"
  }
}
